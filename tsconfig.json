{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,

        "lib": ["es2022"],
        "outDir": "dist",
        "rootDir": "src",

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,

        "module": "NodeNext",
        "sourceMap": true,

        "declaration": true,
        "declarationMap": true
    }
}
