{
    "name": "shopware-data-generator",
    "description": "A tool to create AI-generated demo data for Shopware",
    "author": "Philipp Schuch",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "main": "dist/main.js",
    "files": [
        "dist"
    ],
    "workspaces": [
        "packages/administration"
    ],
    "scripts": {
        "build": "npm run build-admin && npm run build-backend",
        "build-backend": "npm run format && tsc --build",
        "build-admin": "npm run build --workspace=packages/administration",
        "dev-admin": "npm run dev --workspace=packages/administration",
        "format": "prettier --write .",
        "check-format": "prettier --check .",
        "generate": "node --env-file=.env dist/main.js",
        "server": "node --env-file=.env dist/server.js",
        "app": "npm run build && node --env-file=.env dist/app.js"
    },
    "dependencies": {
        "openai": "4.92.1",
        "zod": "3.24.2",
        "axios": "1.9.0",
        "express": "4.21.2",
        "@hono/node-server": "1.14.2",
        "@shopware-ag/app-server-sdk": "1.1.16",
        "better-sqlite3": "11.8.0"
    },
    "devDependencies": {
        "typescript": "5.8.2",
        "prettier": "3.5.3",
        "@types/express": "5.0.0",
        "@types/node": "22.13.10",
        "@arethetypeswrong/cli": "0.17.4"
    }
}
